###############################################################
# TERRAFORM.TFVARS.EXAMPLE
# Description: Example configuration for Hub-and-Spoke deployment
# Usage: Copy to terraform.tfvars and customize values
###############################################################

###############################################################
# PROJECT CONFIGURATION
###############################################################
project_name = "neko"
environment  = "dev" # Options: dev, staging, prod
location     = "westeurope"

###############################################################
# TAGS
###############################################################
tags = {
  CostCenter  = "IT-Infrastructure"
  Owner       = "Platform-Team"
  Criticality = "High"
  Compliance  = "ISO27001"
}

###############################################################
# NETWORK CONFIGURATION
###############################################################
# Custom DNS servers (optional, leave null for Azure default)
custom_dns_servers = null
# custom_dns_servers = ["10.0.0.4", "10.0.0.5"]

# Palo Alto Trust interface IP (used as next hop in route tables)
firewall_trust_ip = "10.0.3.4"

# Admin source IP for management access (replace with your IP)
admin_source_ip = "203.0.113.0/24" # CHANGE THIS!

###############################################################
# TELEMETRY & MONITORING
###############################################################
enable_telemetry = true

# Log Analytics Workspace ID (required if enable_telemetry = true)
log_analytics_workspace_id = "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg-monitoring-prod-weu-01/providers/Microsoft.OperationalInsights/workspaces/log-analytics-prod-weu-01"

###############################################################
# PALO ALTO VM-SERIES CONFIGURATION
###############################################################
deploy_firewall = true

palo_alto_version       = "10.2.3"
palo_alto_sku           = "byol" # Options: byol, bundle1, bundle2
palo_alto_vm_size       = "Standard_D3_v2"
palo_alto_admin_username = "paadmin"

# SSH public key for firewall access (required)
palo_alto_admin_ssh_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... paadmin@workstation"

# Bootstrap configuration (optional but recommended)
bootstrap_storage_account_name = "stpalofirewallbootstrap"
bootstrap_storage_access_key   = "YOUR_STORAGE_ACCOUNT_KEY_HERE" # Stored in Azure Key Vault in production
bootstrap_share_name           = "bootstrap"

###############################################################
# FEATURE FLAGS
###############################################################
# Deploy sample workload VMs in spokes
deploy_spoke_resources = false
